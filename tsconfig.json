{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2018",
        "lib": [
            "esnext"
        ],
        "strict": true,
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "node_modules/**/*"
    ]
}
